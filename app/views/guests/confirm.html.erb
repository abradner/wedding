<div class="container-narrow">
  <div>
    <div class="md:mx-auto md:w-2/3">
      <%= render partial: 'leader' %>
      <%= render partial: 'rsvp_nav', locals: { active: 3 } %>

      <h2>Confirm</h2>

      <%= form_with(model: @guest, url: complete_guest_path(@guest), local: true) do |form| %>
      <div class="mb-4">
        <%= errors_for(@guest) %>
      </div>

      <% if @guest.attending? %>
      <h3 class="text-xl font-semibold mb-2">Your Details</h3>
      <div class="card mb-3">
        <h5 class="card-header"><%= @guest.name %></h5>
        <div class="card-body">
          <div class="md:flex mb-2">
            <div class="md:w-1/3">Email</div>
            <div class="md:w-2/3">
              <p><tt><%= @guest.email %></tt></p>
            </div>
          </div>
          <div class="md:flex mb-2">
            <div class="md:w-1/3">Dietary Preferences</div>
            <div class="md:w-2/3">
              <% if @guest.diet.present? %>
                <pre><%= @guest.diet %></pre>
              <% else %>
                <p>(None)</p>
              <% end %>
            </div>
          </div>
          <div class="md:flex mb-2">
            <div class="md:w-1/3">Song Suggestions</div>
            <div class="md:w-2/3">
              <% if @guest.songs.present? %>
                <pre><%= @guest.songs %></pre>
              <% else %>
                <p>(None)</p>
              <% end %>
            </div>
          </div>
          <div class="text-right">
            <%= link_to 'Edit', guest_path(@guest), class: 'card-link', data: { disable_with: 'Loading...' } %>
          </div>
        </div>
      </div>

      <h3 class="text-xl font-semibold mb-2">Plus Ones</h3>
      <% if @guest.plus_ones.any? %>
        <%= render @guest.plus_ones %>
      <% else %>
        <p>(None &mdash; just you.)</p>
      <% end %>
      <% else %>
      <p>Sorry to hear you won't be joining us!</p>
      <h3 class="text-xl font-semibold mb-2">Your Details</h3>
      <div class="card mb-3">
        <h5 class="card-header"><%= @guest.name %></h5>
        <div class="card-body">
          <div class="md:flex mb-2">
            <div class="md:w-1/3">Email</div>
            <div class="md:w-2/3">
              <p><tt><%= @guest.email %></tt></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <h3 class="text-xl font-semibold mb-2">Other Comments?</h3>

      <%= form.text_area :notes, class: 'form-control' %>
      <small class="form-text">Anything else you'd like to let us know?</small>

      <div class="guests-buttons">
        <div class="md:mx-auto md:w-1/2 text-center">
          <%= form.submit 'Complete RSVP', class: 'btn btn-primary', data: { disable_with: 'Sending...' } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
